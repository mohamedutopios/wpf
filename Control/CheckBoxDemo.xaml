<Window x:Class="Control.CheckBoxDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control"
        mc:Ignorable="d"
        Title="CheckBoxDemo" Height="450" Width="800">
    <Grid>
        <CheckBox x:Name="cbChoc" Content="Supplement Chocolat" HorizontalAlignment="Left"
                  Margin="145,155,0,0" VerticalAlignment="Top" Checked="cbChoc_Checked" 
                  Unchecked="cbChoc_UnChecked"/>
        <CheckBox x:Name="cbSugar" Content="No Sugar" HorizontalAlignment="Left"
          Margin="145,123,0,0" VerticalAlignment="Top" Checked="cbSugar_Checked" 
          Unchecked="cbSugar_UnChecked"/>

        <Label Name="label1" HorizontalAlignment="Left" Margin="145,217,0,0" VerticalAlignment="Top"/>
        <Label Name="label2" HorizontalAlignment="Left" Margin="145,260,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
